<!doctype html>
<html>
<head>
<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/css/hexagons.css">
<title>Isopath</title>
</head>
<body>

<div class="container">
    <div id="nav">
        <h1>Isopath</h1>
        <a id="about" href="#">About</a>
        <div class="text-muted" id="status">Loading...</div>
        <hr>
    </div>

    <div id="lobby">
        <button id="new-game">New game</button><br>
        <!-- todo: for "new-game", pick whether we want to be white or black -->
        <input id="gameid">
        <button id="join-game">Join game</button>
    </div>

    <div id="await-opponent">
        Send this link to your opponent: <a id="opponent-link" href="#" target="_blank"></a>.<br>
        Awaiting opponent...<br>
        <button id="await-opponent-cancel">Cancel</button>
    </div>

    <div id="game">
        <div id="hexgrid"></div>
        <div id="gamestate">
            You are playing as <b><span id="yourcolour">white</span></b>.<br>
            It is <b><span id="whoseturn">your</span></b> turn.<br>
            <div id="movehistory"></div>
        </div>
    </div>

    <div style="clear: both"></div>
    <div id="footer">
        <hr>
        By <a href="https://incoherency.co.uk/">James Stanley</a>.
    </div>
</div>

<script src="/js/jquery-3.3.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/isopath.js"></script>
<script src="/js/isopath-ws.js"></script>
<script src="/js/ui.js"></script>

</body>
</html>
